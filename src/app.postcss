/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;
html,
body {
	@apply h-full overflow-hidden;
	line-height: 1.25;
}

@font-face {
	/* Reference name */
	font-family: 'Plus Jakarta Sans';
	/* For multiple files use commas, ex: url(), url(), ... */
	src: url('/fonts/Plus_Jakarta_Sans/PlusJakartaSans-VariableFont_wght.ttf');
}

:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: 'Plus Jakarta Sans', sans-serif;
	--theme-font-family-heading: 'Plus Jakarta Sans', sans-serif;
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: 255 255 255;
	--theme-rounded-base: 3px;
	--theme-rounded-container: 3px;
	--theme-border-base: 1px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 0 0 0;
	--on-secondary: 0 0 0;
	--on-tertiary: 255 255 255;
	--on-success: 0 0 0;
	--on-warning: 0 0 0;
	--on-error: 255 255 255;
	--on-surface: 255 255 255;
	/* =~= Theme Colors  =~= */
	/* primary | #FFD610 */
	--color-primary-50: 255 249 219; /* ⬅ #fff9db */
	--color-primary-100: 255 247 207; /* ⬅ #fff7cf */
	--color-primary-200: 255 245 195; /* ⬅ #fff5c3 */
	--color-primary-300: 255 239 159; /* ⬅ #ffef9f */
	--color-primary-400: 255 226 88; /* ⬅ #ffe258 */
	--color-primary-500: 255 214 16; /* ⬅ #FFD610 */
	--color-primary-600: 230 193 14; /* ⬅ #e6c10e */
	--color-primary-700: 191 161 12; /* ⬅ #bfa10c */
	--color-primary-800: 153 128 10; /* ⬅ #99800a */
	--color-primary-900: 125 105 8; /* ⬅ #7d6908 */
	/* secondary | #10FF9B */
	--color-secondary-50: 219 255 240; /* ⬅ #dbfff0 */
	--color-secondary-100: 207 255 235; /* ⬅ #cfffeb */
	--color-secondary-200: 195 255 230; /* ⬅ #c3ffe6 */
	--color-secondary-300: 159 255 215; /* ⬅ #9fffd7 */
	--color-secondary-400: 88 255 185; /* ⬅ #58ffb9 */
	--color-secondary-500: 16 255 155; /* ⬅ #10FF9B */
	--color-secondary-600: 14 230 140; /* ⬅ #0ee68c */
	--color-secondary-700: 12 191 116; /* ⬅ #0cbf74 */
	--color-secondary-800: 10 153 93; /* ⬅ #0a995d */
	--color-secondary-900: 8 125 76; /* ⬅ #087d4c */
	/* tertiary | #151515 */
	--color-tertiary-50: 220 220 220; /* ⬅ #dcdcdc */
	--color-tertiary-100: 208 208 208; /* ⬅ #d0d0d0 */
	--color-tertiary-200: 197 197 197; /* ⬅ #c5c5c5 */
	--color-tertiary-300: 161 161 161; /* ⬅ #a1a1a1 */
	--color-tertiary-400: 91 91 91; /* ⬅ #5b5b5b */
	--color-tertiary-500: 21 21 21; /* ⬅ #151515 */
	--color-tertiary-600: 19 19 19; /* ⬅ #131313 */
	--color-tertiary-700: 16 16 16; /* ⬅ #101010 */
	--color-tertiary-800: 13 13 13; /* ⬅ #0d0d0d */
