	--color-error-50: 249 227 227; /* ⬅ #f9e3e3 */
	--color-error-100: 248 218 218; /* ⬅ #f8dada */
	--color-error-200: 246 209 209; /* ⬅ #f6d1d1 */
	--color-error-300: 240 181 181; /* ⬅ #f0b5b5 */
	--color-error-400: 229 125 125; /* ⬅ #e57d7d */
	--color-error-500: 218 69 69; /* ⬅ #DA4545 */
